# Database
DATABASE_URL="postgresql://username:password@localhost:5432/sistema_escola"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV="development"

# Email
